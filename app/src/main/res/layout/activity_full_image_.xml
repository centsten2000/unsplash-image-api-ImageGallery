<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FullImage_Activity">


    <com.movefastimagegallery_.Helper.TouchImageView
        android:id="@+id/img_wallpaper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="matrix" />


    <Button
        android:id="@+id/btn_Aplay"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/_30sdp"
        android:background="@drawable/bg_btn_apply"
        android:gravity="center"
        android:onClick="OnApplyclick"
        android:padding="@dimen/_5sdp"
        android:text="@string/setasawallpaper"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp" />


</RelativeLayout>